@NulllogiconeApi_HostAddress = http://localhost:5131

# =================================
# API Information Endpoints
# =================================

### Get API Information
GET {{NulllogiconeApi_HostAddress}}/about
Accept: application/json



# =================================
# Stamm Endpoints
# =================================

### Get all Stamm entries (top 10)
GET {{NulllogiconeApi_HostAddress}}/stamm
Accept: application/json

### Get Stamm by ID
GET {{NulllogiconeApi_HostAddress}}/stamm/1
Accept: application/json

### Create new Stamm
POST {{NulllogiconeApi_HostAddress}}/stamm
Content-Type: application/json

{
  "name": "New Stamm Entry",
  "description": "This is a new stamm entry created via API"
}

### Update Stamm by ID
PUT {{NulllogiconeApi_HostAddress}}/stamm/1
Content-Type: application/json

{
  "name": "Updated Stamm Alpha",
  "description": "Updated description for Stamm Alpha"
}

### Delete Stamm by ID
DELETE {{NulllogiconeApi_HostAddress}}/stamm/1

# =================================
# PostIt Endpoints
# =================================

### Get all PostIt entries (top 10)
GET {{NulllogiconeApi_HostAddress}}/postit
Accept: application/json

### Get PostIt entries - filter by completed status
GET {{NulllogiconeApi_HostAddress}}/postit?completed=false
Accept: application/json

### Get PostIt by ID
GET {{NulllogiconeApi_HostAddress}}/postit/1
Accept: application/json

### Create new PostIt
POST {{NulllogiconeApi_HostAddress}}/postit
Content-Type: application/json

{
  "title": "New Task",
  "content": "Complete the API testing",
  "isCompleted": false
}

### Update PostIt by ID
PUT {{NulllogiconeApi_HostAddress}}/postit/1
Content-Type: application/json

{
  "title": "Updated Task Title",
  "content": "Updated task content",
  "isCompleted": true
}

### Toggle PostIt completed status
PATCH {{NulllogiconeApi_HostAddress}}/postit/1/toggle

### Delete PostIt by ID
DELETE {{NulllogiconeApi_HostAddress}}/postit/1

# =================================
# TopLab Endpoints
# =================================

### Get all TopLab entries (top 10)
GET {{NulllogiconeApi_HostAddress}}/toplab
Accept: application/json

### Get TopLab entries - filter by category
GET {{NulllogiconeApi_HostAddress}}/toplab?category=Research
Accept: application/json

### Get all TopLab categories
GET {{NulllogiconeApi_HostAddress}}/toplab/categories
Accept: application/json

### Get TopLab by ID
GET {{NulllogiconeApi_HostAddress}}/toplab/1
Accept: application/json

### Create new TopLab
POST {{NulllogiconeApi_HostAddress}}/toplab
Content-Type: application/json

{
  "name": "New Lab Experiment",
  "description": "A new experimental research project",
  "category": "Research",
  "priority": 1
}

### Update TopLab by ID
PUT {{NulllogiconeApi_HostAddress}}/toplab/1
Content-Type: application/json

{
  "name": "Updated Lab Experiment 1",
  "description": "Updated experimental research project",
  "category": "Advanced Research", 
  "priority": 3
}

### Update TopLab priority only
PATCH {{NulllogiconeApi_HostAddress}}/toplab/1/priority
Content-Type: application/json

5

### Delete TopLab by ID
DELETE {{NulllogiconeApi_HostAddress}}/toplab/1

