{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch NulllogiconeCore",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-nulllogicone-api",
            "program": "${workspaceFolder}/NulllogiconeCore/NulllogiconeCore/bin/Debug/net10.0/NulllogiconeCore.dll",
            "args": [],
            "cwd": "${workspaceFolder}/NulllogiconeCore/NulllogiconeCore",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch NulllogiconeCore (Docker)",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
                "netCore": {
                "appProject": "${workspaceFolder}/NulllogiconeCore/NulllogiconeCore/NulllogiconeCore.csproj"
            }
        }
    ]
}
